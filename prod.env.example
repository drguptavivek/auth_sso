# Production Environment Settings Example
# Copy this file to prod.env and adjust values

# PostgreSQL Configuration
POSTGRES_DB=keycloak
POSTGRES_USER=keycloak
POSTGRES_PASSWORD=change_this_password

# Keycloak Configuration
KC_BOOTSTRAP_ADMIN_USERNAME=admin
KC_BOOTSTRAP_ADMIN_PASSWORD=change_this_password
KC_DB=postgres
KC_DB_URL=jdbc:postgresql://postgres:5432/keycloak
KC_DB_USERNAME=keycloak
KC_DB_PASSWORD=change_this_password

# Production Specific Settings
KC_HOSTNAME=auth.yourdomain.com
KC_HTTP_ENABLED=false
KC_HOSTNAME_STRICT=true
KC_HOSTNAME_STRICT_HTTPS=true
KC_HTTPS_REQUIRED=all

# Cache Configuration
KC_CACHE=enabled
KC_CACHE_STACK=kubernetes

# Performance Settings
KC_TRANSACTION_XA_ENABLED=false
KC_SPI_EVENTS_LISTENER_EMAIL_EXCLUDE_EVENTS=LOGIN,LOGIN_ERROR

# Monitoring
KC_HEALTH_ENABLED=true
KC_METRICS_ENABLED=true

# JVM Settings
JAVA_OPTS=-Xms512m -Xmx2048m -XX:MetaspaceSize=96M -XX:MaxMetaspaceSize=256m

# Resource Limits
KC_MEMORY_LIMIT=2G
KC_MEMORY_RESERVATION=512M